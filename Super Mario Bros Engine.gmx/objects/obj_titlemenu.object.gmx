            <string>///Draw the title menus

//Draw HUD
event_inherited();

//Set the font
draw_set_font(global.hud_font);

//Set the colour
draw_set_colour(c_white);

//Set the alpha
draw_set_alpha(1);

//Get the length of the menu
for (var i=1; i&lt;=menu[page,0]; i++) {
    
    //Draw the text...
    if (i == current)
        draw_text(view_xview[0]+80, view_yview[0]+144+(16*(i-1)),menu[page,i]);
