    if (i == current)
        draw_sprite_ext(spr_hud_title_cursor, -1, view_xview[0]+72, view_yview[0]+144+(16*(i-1)), 1, 1, 0, c_white, 1);
}

//Draw highscore
draw_text(view_xview[0]+88, view_yview[0]+184, "TOP- " + string_add_zeros(global.hiscore, 6));

//Draw Mario &amp; Luigi
draw_sprite(scr_mario_walk(), 0, 40, 193);
draw_sprite_ext(scr_luigi_walk(), 0, 216, 193, -1, 1, 0, c_white, 1);
