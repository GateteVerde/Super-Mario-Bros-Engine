            <kind>1</kind>
            <string>///Title Menu

//Inherit event
event_inherited();

//Play 'Title Screen' bgm
audio_loop_sound(global._music[1], global._st[1], global._en[1], 48000, 1);

//First level
mylevel = "5-1";

//Page
page = 0;

//Choice
current = 1;

//Menu 0: Main
menu[0,0] = 2;
menu[0,1] = " NEW GAME";
menu[0,2] = " CONTINUE";

//Menu 1: New Game
menu[1,0] = 2;
menu[1,1] = " MARIO GAME";
menu[1,2] = " LUIGI GAME";

//Menu 2: Difficulty
menu[2,0] = 2;
menu[2,1] = " EASY";
menu[2,2] = " HARD";
</string>
